{
  "name": "ai-storyboardify",
  "version": "0.1.0",
  "type": "module",
  "description": "AI驱动的分镜脚本创作工具 - 从剧本到制作包的完整解决方案",
  "keywords": [
    "storyboard",
    "screenplay",
    "manga",
    "short-video",
    "dynamic-manga",
    "ai",
    "content-creation",
    "分镜",
    "剧本",
    "漫画",
    "短视频"
  ],
  "author": "Storyboardify Team",
  "license": "MIT",
  "main": "dist/cli.js",
  "bin": {
    "storyboardify": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/cli.js",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^12.0.0",
    "chalk": "^5.3.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.12",
    "js-yaml": "^4.1.0",
    "marked": "^16.4.1",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wordflowlab/storyboardify"
  },
  "homepage": "https://github.com/wordflowlab/storyboardify#readme",
  "bugs": {
    "url": "https://github.com/wordflowlab/storyboardify/issues"
  }
}
